@using WeddingMert.Entity.DTOs.Abouts;
@model List<AboutDto>


<div class="container-fluid py-5" id="about">
    <div class="container py-5">
        <div class="section-title position-relative text-center">
            <h6 class="text-uppercase text-primary mb-3" style="letter-spacing: 3px;">Hakkımızda</h6>
            <h1 class="font-secondary display-4">Gelin & Damat</h1>
            <i class="far fa-heart text-dark"></i>
        </div>
        @foreach (var item in Model)
        {
            if (item.Id == Guid.Parse("b0de1e19-937b-471b-ae83-6e023013b4a3"))
            {

                <div class="row m-0 mb-4 mb-md-0 pb-2 pb-md-0">
                    <div class="col-md-6 p-0 text-center text-md-right">
                        <div class="h-100 d-flex flex-column justify-content-center bg-secondary p-5">
                            <h3 class="mb-3">@item.Title</h3>
                            <p>@item.Content.</p>
                            <h3 class="font-secondary font-weight-normal text-muted mb-3"><i class="fa fa-male text-primary pr-3"></i>@item.Person</h3>
    
                        </div>
                    </div>
                    <div class="col-md-6 p-0" style="min-height: 400px;">
                        <img class="position-absolute w-100 h-100" src="~/images/@item.Image.FileName" style="object-fit: cover;">
                    </div>
                </div>
            }

        }
        @foreach (var item in Model)
        {
            if (item.Id == Guid.Parse("b0de1e19937b471bae836e023013b4cd"))
            {

                <div class="row m-0">
                    <div class="col-md-6 p-0" style="min-height: 400px;">
                        <img class="position-absolute w-100 h-100" src="~/images/@item.Image.FileName" style="object-fit: cover;">
                    </div>
                    <div class="col-md-6 p-0 text-center text-md-left">
                        <div class="h-100 d-flex flex-column justify-content-center bg-secondary p-5">
                            <h3 class="mb-3">@item.Title</h3>
                            <p>@item.Content.</p>
                            <h3 class="font-secondary font-weight-normal text-muted mb-3"><i class="fa fa-female text-primary pr-3"></i>@item.Person</h3>

                        </div>
                    </div>
                </div>
            }

        }
    </div>
</div>
