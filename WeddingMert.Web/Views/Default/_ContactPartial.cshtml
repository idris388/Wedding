@using WeddingMert.Entity.DTOs.Contacts;
@model ContactAddDto

<div class="container-fluid py-5" id="rsvp">
    <div class="container py-5">
        <div class="section-title position-relative text-center">
            <h6 class="text-uppercase text-primary mb-3" style="letter-spacing: 3px;">Mesaj</h6>
            <h1 class="font-secondary display-4">Mesajınızı Bırakabilirsiniz</h1>
            <i class="far fa-heart text-dark"></i>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center">
                    <form method="post" asp-controller="Default" asp-action="_ContactPartial">
                        <div class="form-row">
                            <div class="form-group col-sm-6">
                                <input type="text" asp-for="Name" class="form-control bg-secondary border-0 py-4 px-3" placeholder="Adınız" />
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <input type="text" asp-for="Surname" class="form-control bg-secondary border-0 py-4 px-3" placeholder="Soyadınız" />
                                <span asp-validation-for="Surname"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <input type="email" asp-for="Mail" class="form-control bg-secondary border-0 py-4 px-3" placeholder="Mail" /><span asp-validation-for="Mail"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <input type="tel" asp-for="Phone" value="+90" required oninput="preventEmptyPrefix(this)" class="form-control bg-secondary border-0 py-4 px-3" placeholder="Telefon" />
                                <span asp-validation-for="Phone"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <textarea asp-for="Message" class="form-control bg-secondary border-0 py-2 px-3" rows="5" placeholder="Mesajınız..." required="required"></textarea>
                            <span asp-validation-for="Message"></span>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary font-weight-bold py-3 px-5">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function preventEmptyPrefix(input) {
        if (input.value === "") {
            input.value = "+90";
        }
    }
</script>