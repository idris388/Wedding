@model List<AboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>Hakkımızda </h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>Başlık</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr name="@item.Id">
            <th>@item.Title</th>
            <th>
                <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="About" asp-action="Update" asp-route-aboutId="@item.Id"><i class="bx bxs-edit"></i></a>
            </th>
        </tr>
    }
</table>

@section Scripts{
    <script src="~/js/aboutIndex.js" type="application/ecmascript"></script>
}